/*----------------------------------------*\
  Button
\*----------------------------------------*/

.button {
  @apply px-3 py-2;
  @apply font-bold;
  @apply bg-blue-400 text-white;
  @apply rounded;
}

.button + .button {
  @apply ml-2;
}

.button-danger {
  @apply bg-red-400;
}

.button-neutral {
  @apply bg-gray-400;
}

.button[disabled] {
  cursor: not-allowed;
  opacity: .5;
}